{
    "$schema": "https://www.raycast.com/schemas/extension.json",
    "name": "ms-todo",
    "title": "MS To Do Automator",
    "description": "Create tasks for MS ToDo",
    "icon": "command-icon.png",
    "author": "skij",
    "categories": [
        "Productivity"
    ],
    "license": "MIT",
    "commands": [
        {
            "name": "create-task",
            "title": "Create MS Task",
            "description": "Create new task to common list",
            "mode": "view",
            "icon": "command-icon.png"
        }
    ],
    "preferences": [
        {
            "name": "clientId",
            "type": "textfield",
            "required": true,
            "title": "Client Id",
            "description": "Client Id. Find it in Azure Portal your app overview page."
        },
        {
            "name": "clientSecret",
            "type": "password",
            "required": true,
            "title": "Client Secret",
            "description": "Client Secret. Find it in Azure Portal your app Certificates & secrets page."
        }
    ],
    "dependencies": {
        "@azure/identity": "^2.0.5",
        "@microsoft/microsoft-graph-client": "^3.0.2",
        "@raycast/api": "^1.36.1",
        "@types/node-fetch": "^2.6.2",
        "axios": "^0.27.2",
        "isomorphic-fetch": "^3.0.0",
        "lodash": "^4.17.21",
        "qs": "^6.10.5"
    },
    "devDependencies": {
        "@microsoft/microsoft-graph-types": "^2.21.0",
        "@types/lodash": "^4.14.182",
        "@types/node": "~16.10.0",
        "@types/qs": "^6.9.7",
        "@types/react": "^17.0.28",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "prettier": "^2.5.1",
        "typescript": "^4.4.3"
    },
    "scripts": {
        "build": "ray build -e dist",
        "dev": "ray develop",
        "fix-lint": "ray lint --fix",
        "lint": "ray lint"
    }
}
